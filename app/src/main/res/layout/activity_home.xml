<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@drawable/wb1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="289dp"
            android:padding="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/logo2" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/o"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/zero3"
            android:layout_weight="1"
            android:background="@drawable/boder"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:onClick="choseO"/>
        <ImageView
            android:id="@+id/x"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/x2"
            android:padding="10dp"
            android:background="@drawable/boder"
            android:layout_weight="1"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:onClick="choseX"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/btn_vs_h"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="VS"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="#074BF8"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:drawableRight="@drawable/ic_baseline_perm_identity_24"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:onClick="vsHuman"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/btn_vs_c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="VS"
            android:textColor="@color/white"
            android:background="#E82503"
            android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
            android:drawableRight="@drawable/ic_outline_computer2_24"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_weight="1"
            android:onClick="vsComputer"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.96">

    </LinearLayout>




</LinearLayout>